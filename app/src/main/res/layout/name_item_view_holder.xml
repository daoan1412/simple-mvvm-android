<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/listItemContainer">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/nameItem" tools:text="Name Item"
            android:textSize="18sp" android:textColor="@android:color/background_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="4sp"
            app:layout_constraintStart_toEndOf="@+id/complete"
            app:layout_constraintEnd_toStartOf="@id/handle"
            android:layout_marginStart="16dp"/>

    <ImageView
            android:id="@+id/handle"
            android:layout_width="0dp" android:layout_height="48dp"
            android:src="@drawable/ic_baseline_reorder_24px"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:tint="@color/colorPrimary"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/complete" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:buttonTint="@color/colorPrimary"/>
</androidx.constraintlayout.widget.ConstraintLayout>